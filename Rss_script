TabGoalkeeper:CreateToggle({
   Name = "üëÅÔ∏è –ü–æ–∫–∞–∑–∞—Ç—å –∑–æ–Ω—É –∑–∞—â–∏—Ç—ã",
   CurrentValue = (goalkeeperZone ~= nil),
   Callback = function(Value) 
       if Value then
           if not goalkeeperZone then createGoalkeeperZone() end
       else
           safeDestroy(goalkeeperZone)
           goalkeeperZone = nil
       end
   end,
})

