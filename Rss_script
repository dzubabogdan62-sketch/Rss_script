               Rayfield:Notify({
                   Title = "‚ö†Ô∏è –í–æ—Ä–æ—Ç–∞ –Ω–∞–π–¥–µ–Ω—ã",
                   Content = "–ù–æ –ø–µ—Ä—Å–æ–Ω–∞–∂ –Ω–µ –∑–∞–≥—Ä—É–∂–µ–Ω",
                   Duration = 3
               })
           end
       else
           Rayfield:Notify({
               Title = "‚ö†Ô∏è –í–æ—Ä–æ—Ç–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã",
               Content = "–ó–∞–π–¥–∏—Ç–µ –≤ –º–∞—Ç—á!",
               Duration = 3
           })
       end
   end,
})

TabGoalkeeper:CreateButton({
   Name = "üìç –¢–µ–ª–µ–ø–æ—Ä—Ç –≤ –≤–æ—Ä–æ—Ç–∞",
