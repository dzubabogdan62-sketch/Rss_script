-- üéØ RSS WITH REAL BOUNCE PHYSICS
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local lp = Players.LocalPlayer

print("=== RSS BOUNCE PHYSICS LOADED ===")

-- –ù–ê–ô–¢–ò –ú–Ø–ß–ò
local balls = {}
for _, v in ipairs(workspace:GetDescendants()) do
    if v:IsA("BasePart") and (v.Name:lower():find("ball") or v.Name:lower():find("football")) then
        table.insert(balls, v)
        print("[BALL] ", v.Name)
    end
end

-- –§–£–ù–ö–¶–ò–Ø –°–û–ó–î–ê–ù–ò–Ø –•–ò–¢–ë–û–ö–°–ê –° –§–ò–ó–ò–ö–û–ô
local function createBounceHitbox(pos, size, name, bounceForce)
    bounceForce = bounceForce or 1.3 -- —Å–∏–ª–∞ –æ—Ç—Å–∫–æ–∫–∞
    
    local part = Instance.new("Part")
    part.Name = name
    part.Size = size
    part.Position = pos
    part.Transparency = 0.7
    part.Anchored = true
    part.CanCollide = false -- –í–ê–ñ–ù–û: CanCollide = false –¥–ª—è Touch —Å–æ–±—ã—Ç–∏—è
    part.Material = Enum.Material.Neon
    part.Color = Color3.fromRGB(0, 170, 255)
    part.Parent = workspace
    
    -- TouchTransmitter –¥–ª—è –æ–±–Ω–∞—Ä—É–∂–µ–Ω–∏—è –∫–∞—Å–∞–Ω–∏–π
    local touch = Instance.new("TouchTransmitter")
    touch.Parent = part
    
    -- –ü–æ–¥—Å–≤–µ—Ç–∫–∞
    local highlight = Instance.new("Highlight")
    highlight.FillColor = part.Color
    highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
    highlight.FillTransparency = 0.6
    highlight.OutlineTransparency = 0
    highlight.Adornee = part
    highlight.Parent = part
    
    -- –§–ò–ó–ò–ö–ê –û–¢–°–ö–û–ö–ê
    part.Touched:Connect(function(hit)
        -- –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ —ç—Ç–æ –º—è—á
        for _, ball in ipairs(balls) do
            if hit == ball or hit:IsDescendantOf(ball) then
                -- –í—ã—á–∏—Å–ª—è–µ–º –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –æ—Ç—Å–∫–æ–∫–∞
                local normal = (ball.Position - part.Position).Unit
                
                -- –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—É—â—É—é —Å–∫–æ—Ä–æ—Å—Ç—å –º—è—á–∞
                local vel = ball.AssemblyLinearVelocity
                
                -- –§–æ—Ä–º—É–ª–∞ –æ—Ç—Å–∫–æ–∫–∞: V_new = V - 2*(V¬∑N)*N * —Å–∏–ª–∞
                local dotProduct = vel:Dot(normal)
                local newVelocity = vel - (2 * dotProduct * normal) * bounceForce
                
                -- –ü—Ä–∏–º–µ–Ω—è–µ–º –Ω–æ–≤—É—é —Å–∫–æ—Ä–æ—Å—Ç—å
                ball.AssemblyLinearVelocity = newVelocity
                
                -- –í–∏–∑—É–∞–ª—å–Ω—ã–π —ç—Ñ—Ñ–µ–∫—Ç
                highlight.FillColor = Color3.fromRGB(255, 50, 50)
                wait(0.1)
                highlight.FillColor = part.Color
                
                break
            end
        end
    end)
    
    return part
end

-- –°–û–ó–î–ê–ï–ú –•–ò–¢–ë–û–ö–°–´ –í–û–ö–†–£–ì –ü–û–õ–Ø (–Ω–∞—Å—Ç—Ä–æ–π—Ç–µ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç—ã!)
local hitboxes = {}
local fieldCenter = Vector3.new(0, 5, 0)
local fieldWidth = 100
local fieldHeight = 70

-- –ë–æ–∫–æ–≤—ã–µ —Å—Ç–µ–Ω–∫–∏
table.insert(hitboxes, createBounceHitbox(
    fieldCenter + Vector3.new(0, 3, fieldHeight/2),
    Vector3.new(fieldWidth, 8, 1),
    "NorthWall",
    1.4
))

table.insert(hitboxes, createBounceHitbox(
    fieldCenter + Vector3.new(0, 3, -fieldHeight/2),
    Vector3.new(fieldWidth, 8, 1),
    "SouthWall",
    1.4
))

table.insert(hitboxes, createBounceHitbox(
    fieldCenter + Vector3.new(fieldWidth/2, 3, 0),
    Vector3.new(1, 8, fieldHeight),
    "EastWall",
    1.3
))

table.insert(hitboxes, createBounceHitbox(
    fieldCenter + Vector3.new(-fieldWidth/2, 3, 0),
    Vector3.new(1, 8, fieldHeight),
    "WestWall",
    1.3
))

-- –î–û–ë–ê–í–ò–¢–¨ ESP –ú–Ø–ß–ê (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ)
for _, ball in ipairs(balls) do
    local gui = Instance.new("BillboardGui")
    gui.Size = UDim2.new(0, 150, 0, 30)
    gui.AlwaysOnTop = true
    gui.Adornee = ball
    gui.Parent = ball
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = "‚öΩ"
    label.TextColor3 = Color3.fromRGB(255, 255, 0)
    label.Font = Enum.Font.GothamBold
    label.TextSize = 24
    label.Parent = gui
end

-- –ü–†–û–í–ï–†–ö–ê –§–ò–ó–ò–ö–ò
RunService.Heartbeat:Connect(function()
    local char = lp.Character
    local root = char and char:FindFirstChild("HumanoidRootPart")
    if not root then return end
    
    -- –ú–æ–Ω–∏—Ç–æ—Ä–∏–º –±–ª–∏–∂–∞–π—à–∏–π –º—è—á
    local closestBall = nil
    local closestDist = math.huge
    
    for _, ball in ipairs(balls) do
        if ball and ball.Parent then
            local dist = (ball.Position - root.Position).Magnitude
            if dist < closestDist then
                closestDist = dist
                closestBall = ball
            end
        end
    end
end)

print("=== PHYSICS SYSTEM READY ===")
print("Balls found: " .. #balls)
print("Hitboxes: " .. #hitboxes .. " (with bounce physics)")
print("Bounce force: 1.3-1.4")

-- –ò–ù–°–¢–†–£–ö–¶–ò–Ø –ü–û –ù–ê–°–¢–†–û–ô–ö–ï
print("\n‚ö†Ô∏è –ù–ê–°–¢–†–û–ô–¢–ï –ö–û–û–†–î–ò–ù–ê–¢–´:")
print("1. –ó–∞–π–¥–∏—Ç–µ –≤ –∏–≥—Ä—É")
print("2. –í—Å—Ç–∞–Ω—å—Ç–µ –≤ —Ü–µ–Ω—Ç—Ä–µ –ø–æ–ª—è")
print("3. –í –∫–æ–Ω—Å–æ–ª–∏ –≤–≤–µ–¥–∏—Ç–µ: print(game.Players.LocalPlayer.Character.HumanoidRootPart.Position)")
print("4. –ü–æ–¥—Å—Ç–∞–≤—å—Ç–µ —ç—Ç–∏ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç—ã –≤ fieldCenter")
print("5. –ù–∞—Å—Ç—Ä–æ–π—Ç–µ fieldWidth –∏ fieldHeight –ø–æ–¥ —Ä–∞–∑–º–µ—Ä –≤–∞—à–µ–≥–æ –ø–æ–ª—è")
